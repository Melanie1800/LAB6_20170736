<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ListaEventosFragment">


    <EditText
        android:id="@+id/filtro"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="26.7dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="26.7dp"
        android:background="@drawable/edittext_rounded_background"
        android:ems="10"
        android:hint="Buscar un evento"
        android:inputType="textPersonName"
        android:paddingStart="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_search_24"
        android:layout_marginStart="26.7dp"
        app:layout_constraintStart_toStartOf="@id/filtro"
        app:layout_constraintTop_toTopOf="@id/filtro"
        app:layout_constraintBottom_toBottomOf="@id/filtro"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>